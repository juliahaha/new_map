{
    "sources": {
        "sites": {
            "type": "geojson",
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        },
            "districts": {
                "type": "geojson",
                "data" :{
                    "type": "FeatureCollection",
                    "features": []
            }
        }
    },
    "layers": [
        {
            "id": "properties-points",
            "type": "circle",
            "source": "sites",
            "paint": {
                "circle-color": "red",
                "circle-radius": 2,
                "circle-stroke-width": 1,
                "circle-stroke-color": "blue"
            }
        },
        {
            "id": "parking-labels",
            "type": "symbol",
            "source": "sites",
            "paint": {
                "text-color": "blue"
            },
            "layout": {
                "text-field": [
                "concat",
                ["get", "spaces"],
                " spaces"
                ]
            }
        },
        {
            "id":  "districts-fill",
            "type": "line",
            "source": "districts",
            "paint": {
                "line-color": "red",
                "line-width": 0.5
            }
        }
    ]
}